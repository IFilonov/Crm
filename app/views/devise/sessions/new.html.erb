<div class="row justify-content-md-center">
  <div class="col col-lg-2"></div>
  <div class="col-md-auto justify-content-md-center shadow-lg"
       style="border: 5px solid #407CDA; border-radius: 25px; background-image: linear-gradient(blue, white); margin: auto;">
    <br>
      <h2 style="color: #FFFFFF">Welcome to QCrm</h2>
      <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, style: "color: white" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :value => @user.email, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :password, style: "color: white" %><br />
          <%= f.password_field :password, autocomplete: "current-password", :value => 'password', class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, style: "color: white" %>
          </div>
        <% end %>
        <br>
        <div class="actions">
          <%= f.submit "Log in", class: 'btn', style: "background-color: #407CDA; color: white"%>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
      <br>
      <%= link_to  "to #{@resource_names.first.capitalize} part of QCrm" , session_path(@resource_names.first),
                   class: 'btn', style: "background-color: #407CDA; color: white"%>
      <br>
      <br>
  </div>
  <div class="col col-lg-2"></div>
</div>
